{{- if .IsPage -}}
    {
        "id": "{{ .Permalink }}",
        "url": "{{ .Permalink }}",
        "title": "{{ .Title }}",
        "summary": {{ .Summary | jsonify }},
        "content_html": {{ .Content | jsonify }}, 
        {{- with .Params.cover -}}
        "image": "{{ . }}",
        {{- end -}} 
        "date_published": "{{ .Date.Format "2006-01-02T15:04:05Z07:00"  | safeHTML }}",
        "date_modified": "{{ .Date.Format "2006-01-02T15:04:05Z07:00"  | safeHTML }}", 
        {{ with .Params.tags }}
        "tags": {{ . | jsonify }}
        {{ end }}
    }
{{- end -}}
